<div class="d-flex align-items-center justify-content-center">
    <h1>Welcome to VoteGems </h1>
</div>
<br></br>
<div class="d-flex align-items-center justify-content-center">
    <h3>Search for public Elections...</h3>
</div>

<%= form_tag search_elections_path, :method => 'get' do %>
    <div class="d-flex align-items-center justify-content-center" style="width:100%;">
        <%= text_field_tag :search, params[:search], style:"width:70%;"%>
    </div>
    <div class="d-flex align-items-center justify-content-center">
    <%= submit_tag "Search" %>
    </div>
<% end %>

