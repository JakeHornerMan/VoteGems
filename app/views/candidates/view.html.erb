<div>
<h1><%= @theelection.title %></h1>
<div>

<% @currentcandidates.each do |candidate| %>

<div class="card text-center" style="width: 20rem; margin: 10px; float:left;">
  <img class="card-img-top" src=<%= candidate.image %> alt="Card image cap" style="width:300px;height:300px;">
  <div class="card-body">
    <h5 class="card-title"><%= candidate.name %></h5>
    <ul class="list-group list-group-flush">
      <li class="list-group-item"><%= candidate.get_upvotes.size %></li>
    </ul>
  </div>
  <div class="card-body">
    <%= link_to like_path(candidate), class: "like", method: :put do %>
      <button type="button" class="btn btn-primary" style="width:18rem">
      Vote!
      </button>
    <% end %>
  </div>
</div>

<% end %>